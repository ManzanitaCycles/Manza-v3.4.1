<figure class="card">
    <a href="{{ post.url }}"><img data-blink-uuid="{{ post.data.featuredImage }}" alt="{{ post.data.alt }}" width="900px" height="600px"></a>
  <figcaption class="mt-s">
    <p><a href="{{ post.url }}">{{ post.data.title }}</a></p>
    {% if (post.data.desc) %}
    <p>{{ post.data.desc }}</p>
    {% endif %}
  </figcaption>
</figure>